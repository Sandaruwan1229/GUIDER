<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_apps_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:fadeScrollbars="true"
        android:scrollbarStyle="outsideInset"
        android:scrollbarThumbVertical="@drawable/thumb_drawable"
        android:scrollbarTrackVertical="@drawable/line_drawable"
        android:scrollbars="vertical"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/pb_apps_loading_indicator"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayoutBottom"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_apps"
        app:layout_constraintVertical_bias="1.0">


        <ImageView
            android:id="@+id/main_menus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4a3139"
            android:scaleType="center"
            app:srcCompat="@android:drawable/ic_dialog_dialer" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4a3139"
            android:scaleType="center"
            app:srcCompat="@android:drawable/star_big_on" />

        <ImageView
            android:id="@+id/graphs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4a3139"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/sandclock_icon_white" />


        <ImageView
            android:id="@+id/menu_apps_action_settingss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4a3139"
            android:gravity="center"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_settings_white_24dp"
            tools:ignore="VectorDrawableCompat" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>